---
import BentoItem from './BentoItem.astro'
import { getI18N } from './i18n';
const { currentLocale } = Astro.props;
const i18n = getI18N(Astro.currentLocale ? { currentLocale: Astro.currentLocale } : { currentLocale: 'default-locale' });
---

<section
    class="w-full max-w-[1400px] grid grid-cols-10 auto-rows-[30rem] gap-4 mx-auto p-20"
>
    <BentoItem class="col-span-10 md:col-span-4" title={i18n.BENTO_TITLE_1}>
        <div
            slot="image"
            class="absolute left-0 right-0 bottom-0 h-full duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-cover bg-center bg-no-repeat bg-blue-950
                    -z-10 group-hover:scale-110"
            style="background-image: url('/mountain.webp')"
        >

        </div>
        <p slot="content" class="max-w-xl" set:html={i18n.BENTO_CONTENT_1}></p>
        
    </BentoItem>
    <BentoItem class="col-span-10 md:col-span-6" title={i18n.BENTO_TITLE_2} subtitle={i18n.BENTO_SUBTITLE_2}>
        <div
            slot="image"
            class="absolute left-0 right-0 bottom-0 h-full duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-cover bg-center bg-no-repeat bg-blue-800
                    -z-10 group-hover:scale-110"
            style="background-image: url('/grefg.webp')"
        ></div>
        <p slot="content" class="max-w-xl" set:html={i18n.BENTO_CONTENT_2}></p>
    </BentoItem>
    <BentoItem class="col-span-10 md:col-span-6" title={i18n.BENTO_TITLE_3} subtitle={i18n.BENTO_SUBTITLE_3}>
        <div
            slot="image"
            class="absolute left-0 right-0 bottom-0 h-full duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-cover bg-center bg-no-repeat bg-blue-950
                    -z-10 group-hover:scale-110"
            style="background-image: url('/pistas.webp')"
        ></div>
        <p slot="content" class="max-w-xl" set:html={i18n.BENTO_CONTENT_3}></p>
    </BentoItem>
    <BentoItem class="col-span-10 md:col-span-4" title={i18n.BENTO_TITLE_4}>
        <div
            slot="image"
            class="absolute left-0 right-0 bottom-0 h-full duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-cover bg-center bg-no-repeat bg-blue-950
                    -z-10 group-hover:scale-110"
            style="background-image: url('/laptop.webp')"
        ></div>
        <p slot="content" class="max-w-xl" set:html={i18n.BENTO_CONTENT_4}></p>
    </BentoItem>

</section>